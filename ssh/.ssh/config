# The clone URL for this setup will be git@[Host]:[github username]/[repo]
# ie. git@github.com:hashhar/dotfiles and git@work.github.com:hashhar/workdotfiles
PreferredAuthentications	publickey,password
AddKeysToAgent				yes
IdentitiesOnly				yes

Host jabong.github.com
	HostName				github.com
	User					git
	IdentityFile			~/.ssh/id_rsa_jabong

Host hashhar.github.com
	HostName				github.com
	User					git
	IdentityFile			~/.ssh/id_rsa

Host bitbucket.org
	HostName				bitbucket.org
	User					git
	IdentityFile			~/.ssh/id_rsa_jabong

Host amardeep
	HostName				amardeep
	User					amardeep
	IdentityFile			~/.ssh/id_rsa_jabong

Host rishabh
	HostName				rishabh
	User					user
	IdentityFile			~/.ssh/id_rsa_jabong

Host rishabh-wlan
	HostName				rishabh-wlan
	User					user
	IdentityFile			~/.ssh/id_rsa_jabong

Host *
	IdentityFile			~/.ssh/id_rsa_jabong

# Examples {{{
# Work profile {{{
# Host work.github.com
# 	HostName github.com
# 	Port 443
# 	User git
# }}}

# Windows machine {{{
# Host hashhar.caesium.com
# 	HostName caesium.com
# 	User hashhar
# }}}

# WSL machine {{{
# Host hashhar-wsl.caesium.com
# 	HostName caesium.com
# 	User hashhar-wsl
# }}}

# Ubuntu GNOME {{{
# Host hashhar.xenon.com
# 	HostName xenon.com
# 	User hashhar
# }}}

# ArchLinux {{{
# Host hashhar.radon.com
# 	HostName radon.com
# 	User hashhar
# }}}
# }}}

