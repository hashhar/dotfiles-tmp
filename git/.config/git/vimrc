"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" => Helper functions
"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" Toggle line wrapping
function! ToggleWrap()
  if (&wrap == 1)
    if (&linebreak == 0)
      set linebreak
      let g:gmove=1
    else
      set nowrap
      let g:gmove=0
    endif
  else
    set wrap
    set nolinebreak
    let g:gmove=1
  endif
endfunction

function! ScreenMovement(movement)
  if &wrap && g:gmove == 'yes'
    return "g" . a:movement
  else
    return a:movement
  endif
endfunction

function! TYToggleBreakMove()
  if exists("g:gmove") && g:gmove == "yes"
    let g:gmove = "no"
  else
    let g:gmove = "yes"
  endif
endfunction

