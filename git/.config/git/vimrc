  call mkdir($HOME.'/.config/nvim/files')
  call mkdir($HOME.'/.config/nvim/files/backup')
  call mkdir($HOME.'/.config/nvim/files/swap')
  call mkdir($HOME.'/.config/nvim/files/undo')
endif

