# Keybindings {{{
# start a terminal
bindsym       $mod+Return                   exec i3-sensible-terminal

# Function Keys {{{
# Pulse Audio controls
bindsym       XF86AudioRaiseVolume          exec --no-startup-id pamixer -i 2
bindsym       $mod1+XF86AudioRaiseVolume    exec --no-startup-id pamixer -i 2 --allow-boost

bindsym       XF86AudioLowerVolume          exec --no-startup-id pamixer -d 2
bindsym       $mod1+XF86AudioLowerVolume    exec --no-startup-id pamixer -d 2 --allow-boost

bindsym       XF86AudioMute                 exec --no-startup-id pamixer -t

# Sreen brightness controls
bindsym       XF86MonBrightnessUp           exec --no-startup-id xbacklight -inc 5
bindsym       XF86MonBrightnessDown         exec --no-startup-id xbacklight -dec 5

# Media player controls
bindsym       XF86AudioPlay                 exec --no-startup-id mpc toggle
bindsym       $mod1+XF86AudioPlay           exec --no-startup-id mpc stop

bindsym       XF86AudioNext                 exec --no-startup-id mpc next
bindsym       $mod1+XF86AudioNext           exec --no-startup-id mpc seek +30

bindsym       XF86AudioPrev                 exec --no-startup-id mpc prev
bindsym       $mod1+XF86AudioPrev           exec --no-startup-id mpc seek -30
# }}}
