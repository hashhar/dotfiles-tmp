! }}}

! Font configuration {{{
Xft.autohint:                   0
Xft.lcdfilter:                  lcddefault
Xft.hintstyle:                  hintmedium
Xft.hinting:                    1
Xft.antialias:                  1
Xft.rgba:                       rgb

! Fira Mono
URxvt.font:                     xft:Fira Mono:size=11
URxvt.letterSpace:              -1
URxvt.lineSpace:                0

URxvt.skipBuiltinGlyphs:        false
! }}}

! Visuals {{{
URxvt.depth:                    32
URxvt.urgentOnBell:             true
! Transparent background
URxvt.background:               [80]black
URxvt.fading:                   25

URxvt.internalBorder:           5
URxvt.externalBorder:           0

URxvt.scrollColor:              [75]#008080
! }}}
